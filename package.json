{
  "name": "pdfzen",
  "private": true,
  "type": "module",
  "module": "src/index.tsx",
  "scripts": {
    "dev": "bun run --watch src/index.tsx",
    "dev:all": "./dev.sh",
    "dev:ui": "./dev.sh ui",
    "dev:backend": "./dev.sh backend",
    "setup": "./dev.sh setup",
    "build": "bun build ./src/index.tsx --outdir=dist --target=bun --minify --sourcemap",
    "build:standalone": "./scripts/build-standalone.sh",
    "start": "bun run dist/index.js",
    "lint": "oxlint .",
    "format": "oxfmt ."
  },
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@opentui/core": "^0.1.74",
    "@opentui/solid": "^0.1.74",
    "babel-preset-solid": "1.9.9",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "pdf-lib": "^1.17.1",
    "solid-js": "1.9.9"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.2.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
